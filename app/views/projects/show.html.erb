<h1><%= @project.name %></h1>
<h2>Project Starts On <strong><%=@project.schedule.start_date.strftime("%A, %B %e, %Y ")%></strong>,</h2>
<h2>and Ends On <strong><%=@project.schedule.end_date.strftime("%A, %B %e, %Y ")%></strong></h2>
<div class="row">
  <div class="large-9 columns">
    <div id="chart" style="width: 100%; height: 300px;"></div>
  </div>

  <div class="large-3 columns">
    <div class="panel" style="width: 100%; height: 300px;">
      <%# Check condition if all actuals have been populated (i.e. project complete) %>
      <% if @period_number %>
      <%= link_to "Update Period #{@period_number}", edit_project_schedule_period_path(@project, @schedule, @schedule.periods.where(period_number: @period_number).first), class: "button round" %>
      <% else %>
        <%= link_to "Project Complete", '#', class: "button round disabled" %>
      <% end %>
      <%= link_to "See Period Details", project_schedule_details_path(@project, @schedule), class: "button round" %>
    </div>
  </div>
</div>
<hr>
<!-- <p><b>SPI: <%#= @spi%></b></p>
<p><b>CPI: <%#= @cpi%></b></p> -->
<div class="row">
  <div class="large-9 columns">
    <div class="large-6 columns">
      <h3>CPI</h3>
    </div>
      <div class="large-6 columns">
    <h3>SPI</h3>
    </div>
  </div>  
</div>
<div class="row">
  <div class="large-9 columns">
    <div id="cpigauge" class="large-6 columns"></div>
    <div id="spigauge" class="large-6 columns"></div>
  </div>  
</div>
<p>There are : <%= @period_numbers%> periods</p>
<p>Next Period : <%= @period_number%> </p>
<p> BCWS <%= @bcws %></p>
<p> Total BCWS <%= @total_bcws %></p> 
<p> BCWP <%= @bcwp %></p> 
<p> Total BCWP <%= @total_bcwp %></p>
<p> ACWP <%= @acwp %></p> 
<p> Total ACWP <%= @total_acwp %></p>